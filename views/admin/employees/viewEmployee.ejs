<%- include ('../partials/header') %>
<%- include ('../partials/side_bar') %>
<section id="content">
<div class="container">
<div class="card">
    <div class="card-header">
        <h2>Edit Staff Detail</h2>
    </div>
    
    <div class="card-body card-padding">
        <form id="addUser" role="form" method="POST" enctype="multipart/form-data">
            <input type="hidden" value="+91" name="countryCode" maxlength="30" id="countryCode" class="form-control" placeholder="last Name">
            <input type="hidden" value="<%= data.id %>" name="empId"  id="empId" class="form-control" placeholder="last Name">
            <div class="row">
                <div class="col-sm-6">                       
                    <div class="input-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                        <div class="fg-line">
                            <input type="text" class="form-control" value="<%= data.firstName %>"  maxlength="30" id="firstName" name="firstName" placeholder="First Name">
                        </div>
                    </div>
                    <br/>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-local-phone"></i></span>
                        <div class="fg-line">
                            <input type="text" class="form-control input-mask" value="<%= data.phoneNumber %>" data-mask="0000000000" name="phoneNumber" id="phoneNumber" placeholder="Contact Number">
                        </div>
                    </div>
                    <br/>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
                        <div class="fg-line">
                            <input type="email" name="email" value="<%= data.email %>" maxlength="60" id="email" class="form-control" placeholder="Email Address">
                        </div>
                    </div>
                    <br/>
                    <div class="input-group">
                         <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                        <div class="fg-line">
                                <input type="text"  value="<%= data.idProofName %>"   maxlength="30" name="idProofName" id="idProofName" class="form-control" placeholder="idProof Name">
                        </div>
                    </div>
                    
                    <br/>  
                        <div class="input-group"  style="margin-left: 37px;">
                            <p class="f-500 c-black m-b-20">Upload Id Proof</p>
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <span class="btn btn-primary btn-file m-r-10">
                                    <span class="fileinput-new">Select file</span>
                                    <span class="fileinput-exists">Change</span>
                                    <input type="file" id="idProof" name="idProof">
                                </span>
                                <span class="fileinput-filename"></span>
                                <a href="#" class="close fileinput-exists" data-dismiss="fileinput">&times;</a>
                            </div>  
                            <div class="lightbox row">
                                <div data-src="<%= data.idProof %>" class="col-sm-4 col-xs-6">
                                    <div class="lightbox-item">
                                        <img src="<%= data.idProof %>" alt="" />
                                    </div>
                                </div>
                            </div>    
                        </div>  
                        <br/>  
                        <div class="input-group"  style="margin-left: 37px;">
                            <p class="f-500 c-black m-b-20">Cover Image</p>
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <span class="btn btn-primary btn-file m-r-10">
                                    <span class="fileinput-new">Select file</span>
                                    <span class="fileinput-exists">Change</span>
                                    <input type="file" id="coverImage" name="coverImage">
                                </span>
                                <span class="fileinput-filename"></span>
                                <a href="#" class="close fileinput-exists" data-dismiss="fileinput">&times;</a>
                            </div>  
                            <div class="lightbox row">
                                <div data-src="<%= data.coverImage %>" class="col-sm-4 col-xs-6">
                                    <div class="lightbox-item">
                                        <img src="<%= data.coverImage %>" alt="" />
                                    </div>
                                </div>
                            </div>      
                        </div> 
                </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                             <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                            <div class="fg-line">
                                    <input type="text" name="lastName" value="<%= data.lastName %>" maxlength="30" id="lastName" class="form-control" placeholder="last Name">
                            </div>
                        </div>          
                        <br/>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="zmdi zmdi-pin"></i></span>
                            <div class="fg-line">    
                                <input type="text"  value="<%= data.address %>" class="form-control" maxlength="255" name="address" id="address" placeholder="Home Address">
                            </div>
                        </div>
                        <br/>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                            <div class="fg-line">    
                                <div class="dtp-container fg-line">
                                    <input type='text' value="<%= data.dob %>" autocomplete="off" class="form-control" name="dob" id="dob" placeholder="DOB">
                                </div>
                            </div>
                        </div>
                        <br/> 
                        <div class="input-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                            <div class="fg-line">  
                            <select class="selectpicker" name="roletype" id="roletype" class="form-control" placeholder="Select Role">
                                <% for(var i=0;i<roles.length;i++) { %>

                                <option value="<%= roles[i].id %>" <%if(roles[i].id ==data.role){%> selected <%}%>><%= roles[i].userType %></option>
                                <% } %>
                            </select>
                            </div>
                        </div>
                        
                </div>
                 <div class="col-sm-6"> 
                    <br/>  
                    <div class="input-group" style="margin-left: 20px;"> 
                        <p class="f-500 c-black m-b-20">Uploaded Profile Image </p>
                        <div class="lightbox row">
                            <div data-src="<%= data.image %>" class="col-sm-4 col-xs-6">
                                <div class="lightbox-item">
                                    <img src="<%= data.image %>" alt="" />
                                </div>
                            </div>
                        </div>    
                        <br/>                  
                        <p class="f-500 c-black m-b-20">Profile Image Preview</p>
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-preview thumbnail" data-trigger="fileinput"></div>
                                <div>
                                    <span class="btn btn-info btn-file">
                                        <span class="fileinput-new">Select image</span>
                                        <span class="fileinput-exists">Change</span>
                                        <input type="file" name="image" id="image">
                                    </span>
                                    <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-t-30 text-center">
                    <button class="btn btn-primary btn-sm waves-effect">Update</button>
                   <a href="<%- adminpath %>employees"><button type="button" class="btn btn-link btn-sm waves-effect">Cancel</button></a>
                </div>
            </div>
        </form>
    </section>
</section>
<%- include ('../partials/script') %>
<%- include('../partials/commonJs'); -%>
<script type="text/javascript">
$(document).ready(function () {
    var todayDate = new Date().getDate();
    $('#dob').datepicker({
       maxDate: new Date(new Date().setDate(todayDate - 1)),
       autoclose: true,
        changeMonth: true, 
        changeYear: true, 
        yearRange: '1900:+0'
    });
    $(function() {
        $('#employeeTab').addClass('active');
        $('#employeeTab a[href^="<%- adminpath %>employees"]').addClass('active');
    });

  $('#addUser').validate({
    rules: {
      email: {
        required: true,
        email: true,
      },
      phoneNumber: {
        required: true
      },
      firstName: {
        required: true
      },
      lastName: {
        required: true
      },
      address: {
        required: true
      },
      dob: {
        required: true
      },
      roletype: {
        required: true
      },
      idProofName: {
        required: true
      },
      image: { accept: "image/jpg,image/jpeg,image/png"},
      idProof: {  accept: "image/jpg,image/jpeg,image/png"},
      coverImage: {  accept: "image/jpg,image/jpeg,image/png"},
    },
    messages: {
      email: {
        required: "Please enter a email address",
        email: "Please enter a vaild email address"
      },
      phoneNumber: {
        required: "Please provide a phoneNumber"
      },
      firstName: {
        required: "Please provide a First Name"
      },
      lastName: {
        required: "Please provide a Last Name"
      },
      address: {
        required: "Please provide a address"
      },
      dob: {
        required: "Please select a dob"
      },
      roletype: {
        required: "Please select a role"
      },
      idProofName: {
        required: "Please provide a id proof"
      },
      image: { accept: 'Not an image!'},
      idProof: { accept: 'Not an image!'},
      coverImage: {accept: 'Not an image!'},
    },
    submitHandler: function (form) {
    $(".page-loader").show();
    var tempform = $('#addUser');
    var form_data = new FormData(tempform[0]);
      $.ajax({
            type: 'POST',
            url: '<%-adminpath%>employees/update',
            dataType: 'json',
            data: form_data,
            contentType:false,
            cache:false,
            processData:false,
            success: function (response) {
            console.log(response);
            if (response.code == '200') {
                   showToastSuccess( response.message);
                   $(".page-loader").hide();
                   setTimeout(function(){ window.location.href="<%-adminpath%>employees"; },2500);
                
            }
            else{
               $(".page-loader").hide();
                showToastError(response.message)
            }
          }
      });
    }
  });
});
</script>
 </body>
</html>